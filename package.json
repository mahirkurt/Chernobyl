{
  "name": "carbon-markdown-pdf",
  "version": "1.0.0",
  "description": "Convert markdown to beautiful academic PDFs using IBM Carbon Design System, Typst, and Quarto",
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "carbon-pdf": "./src/cli.js",
    "carbon-advisor": "./src/ai/advisor-cli.js"
  },
  "scripts": {
    "convert:typst": "node src/convert-typst.js",
    "convert:quarto": "node src/convert-quarto.js",
    "convert:both": "npm run convert:typst && npm run convert:quarto",
    "example": "node src/cli.js examples/sample.md",
    "advisor": "node src/ai/advisor-cli.js",
    "advisor:analyze": "node src/ai/advisor-cli.js analyze",
    "advisor:chat": "node src/ai/advisor-cli.js chat",
    "advisor:tips": "node src/ai/advisor-cli.js tips",
    "test": "node src/test.js"
  },
  "keywords": [
    "markdown",
    "pdf",
    "carbon",
    "ibm",
    "typst",
    "quarto",
    "academic",
    "report"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@carbon/colors": "^11.23.1",
    "@carbon/layout": "^11.22.1",
    "@carbon/themes": "^11.35.1",
    "@carbon/type": "^11.28.1",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "gray-matter": "^4.0.3",
    "marked": "^12.0.0",
    "mustache": "^4.2.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "prettier": "^3.2.4"
  }
}
